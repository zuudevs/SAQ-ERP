# =====================================================
# ERP LAB SAQ - Environment Configuration
# Sesuai Dokumentasi: docs/00-introduction/02-tech-stack.md
# =====================================================

# =====================================================
# DATABASE CONFIGURATION (PostgreSQL 16)
# =====================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=erp_lab_saq
DB_USER=erp_admin
DB_PASSWORD=erp_secure_password_2026

# =====================================================
# MINIO CONFIGURATION (S3-Compatible Object Storage)
# =====================================================
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=erp_minio_admin
MINIO_ROOT_PASSWORD=MinIO_Secure_Pass_2026
MINIO_ACCESS_KEY=erp_minio_admin
MINIO_SECRET_KEY=MinIO_Secure_Pass_2026
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=erp-archives

# =====================================================
# JWT AUTHENTICATION
# =====================================================
# IMPORTANT: Ubah ini untuk production!
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_2026_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# =====================================================
# BACKEND API CONFIGURATION
# =====================================================
PORT=8080
GO_ENV=development
API_VERSION=v1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
VITE_API_URL=http://localhost:8080/api/v1

# =====================================================
# ENCRYPTION (PGCrypto)
# =====================================================
# Untuk enkripsi data sensitif di database
ENCRYPTION_KEY=your_encryption_key_minimum_32_chars_long_change_this

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=debug
LOG_FORMAT=json

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# =====================================================
# FILE UPLOAD
# =====================================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx,zip

# =====================================================
# AUDIT LOG CONFIGURATION
# =====================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365