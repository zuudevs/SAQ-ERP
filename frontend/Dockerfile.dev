FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Set environment variable
ENV VITE_API_URL=http://localhost:8080/api/v1

# Start development server with host binding
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]